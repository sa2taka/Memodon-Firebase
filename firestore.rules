service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userID} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userID;
    }

    match /memos/{memoId} {
      allow read: if request.auth != null && (request.auth.uid == request.resource.data.user.uid || get(request.resource.data.isPrivate));
      allow write: if request.auth.uid == request.resource.data.user.uid;
    }

    match /secrets/{userID} {
      allow read, write: if request.auth.uid == userID;

      match /twitter/{$providerUserId} {
        allow read, write: if request.auth.uid == userID;
      }

      match /{$providerId}/{$providerUserId} {
        allow read, write: if request.auth.uid == userID;
      }
    }
  }
}
