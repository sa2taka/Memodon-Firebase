    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-plugin-require-context-hook": "^1.0.0",
    "codecov": "^3.5.0",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.2",
